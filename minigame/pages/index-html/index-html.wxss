/**
 * 首页 HTML 版本样式
 * 使用 CSS3 实现与 Canvas 版本相同的视觉效果
 */

page {
  height: 100vh;
  width: 100%;
  background-color: #F5E9D6;
  box-sizing: border-box;
  /* 字体渲染优化 - 关键修复 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FDF9F3 0%, #F5E9D6 100%);
  position: relative;
  /* 禁用可能导致模糊的 3D 变换 */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  perspective: 1000;
}

/* ==================== 标题区域 ==================== */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0 10rpx;
  margin-bottom: 10rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2C1810;
  margin-top: 16rpx;
  margin-bottom: 12rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  /* 文字清晰度优化 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.sub-title {
  font-size: 24rpx;
  color: #8B6F47;
  margin-bottom: 16rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  /* 文字清晰度优化 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.divider {
  width: calc(100% - 40rpx);
  height: 2rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(139, 111, 71, 0.3) 50%, 
    transparent 100%
  );
}

/* ==================== 卡片网格 ==================== */
.cards-grid {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 20rpx 40rpx;
  overflow: hidden;
}

/* ==================== 游戏卡片 ==================== */
.game-card {
  position: relative;
  border-radius: 28rpx;
  box-shadow: 
    0 8rpx 24rpx rgba(139, 111, 71, 0.12),
    0 2rpx 8rpx rgba(139, 111, 71, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  /* 修复模糊问题 - 关键 */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  /* 强制使用 GPU 加速但保持清晰 */
  will-change: transform;
}

/* 点击动效 - 使用 3D 变换避免模糊 */
.game-card:active {
  transform: scale3d(0.96, 0.96, 1) translateZ(0);
  box-shadow: 
    0 4rpx 12rpx rgba(139, 111, 71, 0.1),
    0 1rpx 4rpx rgba(139, 111, 71, 0.06);
}

/* 已解锁卡片 */
.game-card.unlocked {
  cursor: pointer;
}

/* 已解锁标记（小绿点） */
.unlock-dot {
  position: absolute;
  top: 28rpx;
  right: 28rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(76, 175, 80, 0.5);
}

/* ==================== 卡片内容 ==================== */
.card-icon {
  font-size: 84rpx;
  margin-bottom: 16rpx;
  line-height: 1;
  font-family: 'Apple Color Emoji', 'Segoe UI Emoji', sans-serif;
  /* 防止 emoji 模糊 */
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C1810;
  margin-bottom: 12rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  /* 文字清晰度优化 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

.card-levels {
  font-size: 24rpx;
  color: #D4A84B;
  line-height: 1;
  font-family: 'Apple Color Emoji', 'Segoe UI Emoji', sans-serif;
  /* emoji 清晰度优化 */
  -webkit-font-smoothing: antialiased;
}

/* ==================== 未解锁遮罩 ==================== */
.lock-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(245, 233, 214, 0.65);
  /* 移除 backdrop-filter - 这是导致模糊的主要原因 */
  /* backdrop-filter: blur(2rpx); */
  border-radius: 28rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 24rpx;
}

.lock-icon {
  font-size: 40rpx;
  opacity: 0.7;
  /* 改用更温和的灰度效果 */
  filter: grayscale(80%) brightness(0.9);
  -webkit-font-smoothing: antialiased;
}

/* ==================== 底部提示 ==================== */
.footer-hint {
  text-align: center;
  padding: 20rpx 0;
  color: #8B6F47;
  font-size: 22rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
  /* 文字清晰度优化 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ==================== 广告位预留 ==================== */
.ad-placeholder {
  height: 120rpx;
  background-color: transparent;
}
